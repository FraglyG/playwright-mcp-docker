# Playwright MCP Server Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Port to listen on for SSE transport (default: 8931)
PORT=8931

# Host to bind server to (default: localhost, use 0.0.0.0 to bind to all interfaces)
# HOST=localhost

# Browser to use: chrome, firefox, webkit, msedge (default: chrome)
# BROWSER=chrome

# =============================================================================
# BROWSER BEHAVIOR
# =============================================================================

# Run browser in headless mode (default: false, runs headed)
# HEADLESS=true

# Keep browser profile in memory, don't save to disk
# ISOLATED=true

# Device to emulate (e.g., "iPhone 15", "Pixel 5")
# DEVICE="iPhone 15"

# Browser viewport size in pixels (e.g., "1920,1080")
# VIEWPORT_SIZE="1280,720"

# Custom user agent string
# USER_AGENT="Mozilla/5.0 (Custom Agent)"

# =============================================================================
# SECURITY & NETWORKING
# =============================================================================

# Semicolon-separated list of allowed origins
# ALLOWED_ORIGINS="https://example.com;https://api.example.com"

# Semicolon-separated list of blocked origins
# BLOCKED_ORIGINS="https://ads.example.com;https://tracking.com"

# Ignore HTTPS certificate errors
# IGNORE_HTTPS_ERRORS=true

# Disable sandbox for all process types
# NO_SANDBOX=true

# Block service workers
# BLOCK_SERVICE_WORKERS=true

# Proxy server (e.g., "http://myproxy:3128" or "socks5://myproxy:8080")
# PROXY_SERVER="http://proxy.example.com:8080"

# Comma-separated domains to bypass proxy
# PROXY_BYPASS=".com,chromium.org,.domain.com"

# =============================================================================
# CAPABILITIES & FEATURES
# =============================================================================

# Comma-separated list of capabilities: tabs, pdf, history, wait, files, install
# Default is all capabilities enabled
# CAPS="tabs,pdf,history,wait,files,install"

# Whether to send image responses: allow, omit, or auto (default: auto)
# IMAGE_RESPONSES="auto"

# Use screenshots instead of Aria snapshots
# VISION=true

# =============================================================================
# FILE PATHS & STORAGE
# =============================================================================

# Path to configuration file
# CONFIG="/app/config.json"

# Path to browser executable
# EXECUTABLE_PATH="/usr/bin/google-chrome"

# Path to user data directory
# USER_DATA_DIR="/app/user-data"

# Path to output directory for files
# OUTPUT_DIR="/app/output"

# Path to storage state file for isolated sessions
# STORAGE_STATE="/app/storage-state.json"

# =============================================================================
# DEBUGGING & DEVELOPMENT
# =============================================================================

# Save Playwright trace to output directory
# SAVE_TRACE=true

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# CDP endpoint to connect to
# CDP_ENDPOINT="ws://localhost:9222"

# Use browser agent (experimental)
# BROWSER_AGENT="http://localhost:8080"

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# Development setup (headed browser with debugging)
# HEADLESS=false
# SAVE_TRACE=true
# OUTPUT_DIR="/app/traces"
# NO_SANDBOX=true

# Production setup (headless, isolated, secure)
# HEADLESS=true
# ISOLATED=true
# IGNORE_HTTPS_ERRORS=false
# HOST=0.0.0.0
# PORT=8931

# Mobile testing setup
# DEVICE="iPhone 15"
# VIEWPORT_SIZE="390,844"
# USER_AGENT="Mozilla/5.0 (iPhone; CPU iPhone OS 17_0 like Mac OS X)"

# Proxy setup
# PROXY_SERVER="http://proxy.company.com:8080"
# PROXY_BYPASS=".local,.company.com"
# IGNORE_HTTPS_ERRORS=true
